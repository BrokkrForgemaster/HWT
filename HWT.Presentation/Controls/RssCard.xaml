<UserControl x:Class="HWT.Presentation.Controls.RssCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="550" Height="220">
    <Border CornerRadius="10" BorderBrush="#333" BorderThickness="1" Margin="10" Background="Black">
        <Grid>
            <Image x:Name="NewsImage" Stretch="UniformToFill" Opacity="0.35"/>
            <StackPanel Margin="10" VerticalAlignment="Bottom">
                <TextBlock x:Name="TitleText" FontSize="16" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
                <TextBlock x:Name="DateText" FontSize="12" Foreground="LightGray" Margin="0,4,0,0"/>
                <TextBlock x:Name="SummaryText" FontSize="13" Foreground="Gainsboro" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>