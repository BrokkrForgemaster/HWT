<Window x:Class="HWT.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="House Wolf App"
        Height="1080" Width="1920"
        Background="{DynamicResource MainBackground}"
        Icon="/Assets/housewolf.ico"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- Background Image -->
        <Image Source="/Assets/Images/dashboard-bg.jpg"
               Stretch="UniformToFill"
               Opacity="0.08"
               IsHitTestVisible="False" />

        <!-- Sidebar -->
        <Border Style="{DynamicResource SidebarBorderStyle}"
                Width="300"
                Panel.ZIndex="10"
                Margin="20,20,0,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch">
            <DockPanel LastChildFill="True" Margin="16">
                <!-- Clock at bottom -->
                <TextBlock x:Name="TxtLocalTime"
                           DockPanel.Dock="Bottom"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0" />

                <!-- Logo + Buttons -->
                <StackPanel>
                    <Image Source="{DynamicResource SidebarImage}"
                           Width="150" Height="150"
                           Margin="0,0,0,20"
                           Stretch="Uniform"
                           Effect="{DynamicResource CardShadow}" />
                    <Button Content="Dashboard" Tag="Dashboard" Click="Navigate_Click"
                            Margin="0,8" Padding="12,8" FontSize="16" Cursor="Hand"/>
                    <Button Content="Kill Tracker" Tag="Kill Tracker" Click="Navigate_Click"
                            Margin="0,8" Padding="12,8" FontSize="16" Cursor="Hand"/>
                    <Button Content="Settings"  Tag="Settings"  Click="Navigate_Click"
                            Margin="0,8" Padding="12,8" FontSize="16" Cursor="Hand"/>
                    <Button Content="Exit"      Click="Exit_Click"
                            Margin="0,8" Padding="12,8" FontSize="16" Cursor="Hand"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content with Under-Glow -->
        <Grid Margin="340,20,20,20">
          <!-- Glow layer behind -->
          <Border CornerRadius="24"
                  Background="{DynamicResource CardBackground}"
                  Effect="{DynamicResource CardShadow}" />

          <!-- Actual content border above -->
          <Border Style="{DynamicResource ContentBorderStyle}"
                  Padding="24">
            <Frame x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent" />
          </Border>
        </Grid>
    </Grid>
</Window>
